<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="BuildLogDashboard.Views.AlertDialog"
        Title="Alert"
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Background="#F5F5F7"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        SystemDecorations="BorderOnly">

    <Window.Styles>
        <!-- Cancel button hover animation -->
        <Style Selector="Button.btn-cancel /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.btn-cancel /template/ ContentPresenter">
            <Setter Property="Background" Value="#D13438"/>
        </Style>
        <Style Selector="Button.btn-cancel:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#a02528"/>
        </Style>
    </Window.Styles>

    <Border CornerRadius="12"
            Background="#FFFFFF"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Padding="0">
        <Grid RowDefinitions="Auto,Auto,Auto">
            <!-- Icon and Title -->
            <StackPanel Grid.Row="0"
                        Margin="24,24,24,0"
                        HorizontalAlignment="Center">
                <!-- Warning Icon (Apple-style yellow triangle) -->
                <Border Background="#FFF3CD"
                        CornerRadius="24"
                        Width="48" Height="48"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                    <PathIcon Data="M12 2L1 21h22L12 2zm0 3.5L20.5 19h-17L12 5.5zM11 10v4h2v-4h-2zm0 6v2h2v-2h-2z"
                              Width="24" Height="24"
                              Foreground="#856404"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="TitleText"
                           Text="Validation Required"
                           FontSize="17"
                           FontWeight="SemiBold"
                           Foreground="#1A1A1A"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock Grid.Row="1"
                       x:Name="MessageText"
                       Text="Please complete all required fields."
                       FontSize="13"
                       Foreground="#666666"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="24,12,24,0"
                       MaxWidth="340"/>

            <!-- Button -->
            <Border Grid.Row="2"
                    Margin="24,24,24,24">
                <Button x:Name="CancelButton"
                        Content="OK"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="16,12"
                        Classes="btn-cancel"
                        Background="#D13438"
                        Foreground="White"
                        FontWeight="SemiBold"
                        CornerRadius="8"
                        Click="OnCancelClick"/>
            </Border>
        </Grid>
    </Border>
</Window>
