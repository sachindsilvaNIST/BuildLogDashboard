<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BuildLogDashboard.App"
             xmlns:local="using:BuildLogDashboard"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://BuildLogDashboard/Styles/GlassTheme.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <local:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <local:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
            <local:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter"/>
            <local:SaveButtonBackgroundConverter x:Key="SaveButtonBackgroundConverter"/>
            <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <local:ActiveNavForegroundConverter x:Key="ActiveNavForegroundConverter"/>
            <local:ActiveNavBackgroundConverter x:Key="ActiveNavBackgroundConverter"/>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

        <!-- Hand cursor for all buttons -->
        <Style Selector="Button">
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>

        <!-- Button Base Styles with Transitions -->
        <Style Selector="Button.btn-light-gray /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.btn-green /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.btn-blue /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.btn-red /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.btn-success /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.btn-save /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>

        <!-- Button Hover Styles (background only, foreground preserved) -->
        <Style Selector="Button.btn-light-gray:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource GlassAppleLightGrayHoverBrush}"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style Selector="Button.btn-green:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource GlassAppleGreenHoverBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.btn-blue:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource GlassAppleBlueHoverBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.btn-red:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource GlassAppleRedHoverBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.btn-success:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource GlassSuccessHoverBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Navigation button styles -->
        <Style Selector="Button.nav-item /template/ ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.nav-item:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#10007AFF"/>
        </Style>
    </Application.Styles>
</Application>
